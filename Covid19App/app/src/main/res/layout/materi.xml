<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:weightSum="10"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/ic_menu_black_24dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="360dp"
            app:srcCompat="@drawable/ic_notifications_black_24dp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="179dp"
            android:layout_height="160dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="70dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/virus" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="145dp"
            android:layout_height="50dp"
            android:layout_below="@id/imageView2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:fontFamily="@font/roboto_mediumitalic"
            android:text="  COVID 19"
            android:textColor="#fff"
            android:textSize="30dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="350dp"

            app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="232dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/roboto_mediumitalic"
            android:text="Covid-19 adalah penyakit menular yang di sebabkan oleh sindrom pernapasan akut corona virus 2 (SARS-COV-2) atau virus yang menyerang sistem pernapasan. Penyakit ini pertama kali diidentifikasi pada Desember 2019 di Wuhan , ibukota provinsi Hubei China, dan sejak itu menyebar secara global, mengakibatkan pandemi koronavirus 2019-20 yang sedang berlangsung."
            android:textAlignment="center"
            android:textColor="#111"
            android:textSize="20dp" />


    </LinearLayout>



</LinearLayout>


